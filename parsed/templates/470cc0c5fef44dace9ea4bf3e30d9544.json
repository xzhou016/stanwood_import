{"components/blog/recent-posts":"<section class=\"recent-posts\">\n  <div class=\"recent-posts-header\">\n    <h1 class=\"recent-posts-title\">{{blog.name}}</h1>\n  </div>\n\n  {{#each blog.recent_posts}}\n    <article class=\"recent-post\">\n      <div class=\"recent-post-image\"\n           style=\"background-image: url({{getImage thumbnail 'medium' (cdn ../theme_settings.default-product-image)}})\"\n      ></div>\n      <img class=\"sr-only\"\n           src=\"{{getImage thumbnail 'small' (cdn ../theme_settings.default-product-image)}}\"\n           alt=\"{{thumbnail.alt}}\"\n      />\n      <div class=\"recent-post-info\">\n        <span class=\"recent-post-date\">{{date_published}}</span>\n        <h1 class=\"recent-post-title\">{{title}}</h1>\n        <p class=\"recent-post-summary\">{{{summary}}}</p>\n        <a href=\"{{url}}\" class=\"reverse-link\">\n          {{lang 'blog.read_more'}}\n          <svg class=\"recent-post-read-more-icon\"\n               title=\"{{lang 'blog.read_more'}}\"\n               role=\"img\"\n          >\n            <use xlink:href=\"#icon-arrow\"></use>\n          </svg>\n        </a>\n      </div>\n    </article>\n  {{/each}}\n\n  <div class=\"button-blog-link\">\n    <a\n      href=\"{{blog.url}}\"\n      class=\"button button-primary\"\n    >\n      {{lang 'blog.link_text'}}\n    </a>\n  </div>\n</section>\n"}