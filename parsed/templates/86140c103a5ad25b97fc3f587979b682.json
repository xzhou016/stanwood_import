{"components/common/sort":"<form method=\"get\" data-sort-by>\n  <div class=\"form-field form-field-product-sort form-field-select\">\n    <label class=\"form-label\">\n      <span class=\"form-field-title\">\n        {{lang 'sorter.sort_by'}}\n      </span>\n      <span class=\"form-field-control\">\n        <span class=\"form-select-wrapper\">\n          <select class=\"form-input form-select\" name=\"sort\">\n            <option value=\"featured\" {{#compare sort 'featured' operator='==='}}selected{{/compare}}>{{lang 'sorter.featured'}}</option>\n            <option value=\"newest\" {{#compare sort 'newest' operator='==='}}selected{{/compare}}>{{lang 'sorter.newest'}}</option>\n            <option value=\"bestselling\" {{#compare sort 'bestselling' operator='==='}}selected{{/compare}}>{{lang 'sorter.top_sellers'}}</option>\n            <option value=\"alphaasc\" {{#compare sort 'alphaasc' operator='==='}}selected{{/compare}}>{{lang 'sorter.alpha_asc'}}</option>\n            <option value=\"alphadesc\" {{#compare sort 'alphadesc' operator='==='}}selected{{/compare}}>{{lang 'sorter.alpha_desc'}}</option>\n            <option value=\"avgcustomerreview\" {{#compare sort 'avgcustomerreview' operator='==='}}selected{{/compare}}>{{lang 'sorter.reviews'}}</option>\n            <option value=\"priceasc\" {{#compare sort 'priceasc' operator='==='}}selected{{/compare}}>{{lang 'sorter.price_asc'}}</option>\n            <option value=\"pricedesc\" {{#compare sort 'pricedesc' operator='==='}}selected{{/compare}}>{{lang 'sorter.price_desc'}}</option>\n          </select>\n        </span>\n      </span>\n    </label>\n  </div>\n</form>\n"}