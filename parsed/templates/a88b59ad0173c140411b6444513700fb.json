{"components/blog/blog-item":"<hr class=\"blog-divider\">\n\n<article class=\"blog-post\">\n\n  <div class=\"blog-post-meta\">\n    <time class=\"blog-post-date\">{{date_published}}</time>\n\n    {{#if author}}\n      <div class=\"blog-post-author\">\n        {{lang 'blog.posted_by'}} {{author}}\n      </div>\n    {{/if}}\n\n    <h2 class=\"blog-post-title\">\n      <a href=\"{{url}}\">{{title}}</a>\n    </h2>\n  </div>\n\n  <div class=\"blog-post-content rte {{#if summary}}summary{{/if}}\">\n    {{#if summary}}\n\n      {{#if thumbnail}}\n        <p>\n          <a class=\"blog-post-thumbnail\" href=\"{{url}}\" title=\"{{thumbnail.alt}}\">\n            <img src=\"{{getImage thumbnail 'product_zoom'}}\" alt=\"{{thumbnail.alt}}\">\n          </a>\n        </p>\n      {{/if}}\n\n      <p>{{{summary}}}</p>\n\n    {{else}}\n\n      <div class=\"rte\">\n        {{#if thumbnail}}\n          <p>\n            <img src=\"{{getImage thumbnail 'product_zoom'}}\" alt=\"{{thumbnail.alt}}\">\n          </p>\n        {{/if}}\n\n        {{{body}}}\n      </div>\n\n    {{/if}}\n\n    <a href=\"{{url}}\">{{lang 'blog.read_more'}}</a>\n  </div>\n\n</article>\n"}